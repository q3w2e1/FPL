MDBoxLayout:
    orientation: "vertical"

    MDToolbar:
        id: question_number
        title: "Question number 1:"

    MDScreen

        MDLabel:
            id: question
            halign: "center"
            text: "Are you searching for a language that does not require as much previous experience?"
            pos_hint: {"center_x": .5, "center_y": .85}
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"

        # upper Slider (Answer) ##############################################
        MDSlider:
            id: slider0
            min: 0
            max: 100
            value: 27
            hint: False
            pos_hint: {"center_x": .5, "center_y": .45}
            size_hint: (0.8, 0.05)

        MDLabel:
            id: slider0_name
            text: "Answer"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .55}
            font_size: 12
            font_style: "H6"
            size_hint: (0.8, 0.05)

        MDLabel:
            id: slider0_no
            text: "No"
            halign: "left"
            pos_hint: {"center_x": .5, "center_y": .5}
            font_size: 12
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"

        MDLabel:
            id: slider0_dontknow
            text: "I don't know"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .5}
            font_size: 12
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"

        MDLabel:
            id: slider0_yes
            text: "Yes"
            halign: "right"
            pos_hint: {"center_x": .5, "center_y": .5}
            font_size: 12
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"
        ######################################################################

        # lower Slider (Importance) ##########################################
        MDSlider:
            id: slider1
            min: 0
            max: 100
            value: 27
            size_hint: (0.8, 0.05)
            hint: False
            pos_hint: {"center_x": .5, "center_y": .2}

        MDLabel:
            id: slider1_name
            text: "How important is this question to you?"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .3}
            font_size: 12
            font_style: "H6"
            size_hint: (0.8, 0.05)

        MDLabel:
            id: slider1_insig
            text: "Insignificant"
            halign: "left"
            pos_hint: {"center_x": .5, "center_y": .25}
            font_size: 12
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"

        MDLabel:
            id: slider1_dontknow
            text: "I don't know"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .25}
            font_size: 12
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"

        MDLabel:
            id: slider1_impor
            text: "Important"
            halign: "right"
            pos_hint: {"center_x": .5, "center_y": .25}
            font_size: 12
            size_hint: (0.8, 0.05)
            theme_text_color: "Secondary"
        ######################################################################


        MDFillRoundFlatButton:
            id: apply_next
            pos_hint: {"center_x": .5, "center_y": .09}
            text: "Apply & Next Question"
            on_release: app.apply_next()
